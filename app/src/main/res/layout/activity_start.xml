<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/doveLightBlue"
    android:orientation="vertical"
    tools:context=".activities.StartActivity">

    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/started_icon" />

        <TextView
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kas Digital"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mi magna iaculis felis scelerisque proin accumsan. Purus eu cursus lorem est."
            />

        <Button
            app:backgroundTint="@color/lightGreen"
            android:fontFamily="@font/poppins_semi_bold"
            android:background="@drawable/green_button"
            android:textSize="18dp"
            android:onClick="startOnClick"
            android:layout_marginTop="30dp"
            android:id="@+id/loginButton"
            android:text="get Started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>