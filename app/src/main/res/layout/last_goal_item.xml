<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
            android:padding="10dp"
            android:background="@drawable/rounded_section"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@id/iconLayout"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:padding="7dp"
                    android:background="@drawable/icon_background"
                    android:orientation="vertical">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:padding="6dp"
                        android:id="@+id/goalIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:id="@+id/goalCategoryName"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="10sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Tempat Tinggal"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/goalDaysComplete"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="right"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="365 Hari Lagi"/>

                <TextView
                    android:id="@+id/accumulatedAmountGoal"
                    android:paddingRight="11dp"
                    android:layout_gravity="right"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.0 - 30.000.000"/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>